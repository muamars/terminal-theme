{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Schema dasar untuk tema terminal custom buatan Muammar",
  "version": 3,
  "properties": {
    "blocks": {
      "type": "array",
      "description": "Kumpulan blok dalam prompt",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "alignment": { "type": "string" },
          "segments": { "type": "array" }
        }
      }
    }
  }
}
