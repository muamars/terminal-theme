{
  "$schema": "https://raw.githubusercontent.com/muamars/terminal-theme/main/config/themes/schema.json",
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "git",
          "style": "diamond",
          "background": "#4CAF50",
          "foreground": "#FFFFFF",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": "{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ✏ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ✔ {{ .Staging.String }}{{ end }}",
          "properties": {
            "branch_template": "{{ .Branch }}",
            "fetch_status": true
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "background": "#2196F3",
          "foreground": "#FFFFFF",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": "{{ .Path }}",
          "properties": {
            "style": "folder"
          }
        }
      ]
    }
  ]
}
